.pokemon-list-container {
  width: 25%;
  padding: 20px;
  background-color: gray;
  display: flex;
  flex-direction: column;
  position: fixed;
  right: 0;
  top: 0;
  height: 100%;
  padding-top: 50px;
}

.pokemon-list-grid {
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  .pokemon-item {
    margin-top: 25px;
    width: 50%;
    align-items: center;
    justify-content: center;
    display: flex;
    img {
      width: 100px;
      height: 100px;
    }
  }
}
